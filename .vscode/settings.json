{
    "files.exclude": {
        "**/.git": true,
        "**/.mypy_cache": true,
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.pytest_cache": true,
        "venv/": true
    },
    "python.testing.pytestEnabled": true,
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "strict",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    }
}